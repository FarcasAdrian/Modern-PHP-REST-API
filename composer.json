{
  "name": "adrian/rest-api",
  "description": "Modern implementation of REST API",
  "minimum-stability": "dev",
  "license": "proprietary",
  "authors": [
    {
      "name": "Adrian Faras",
      "email": "farcasadrian94@gmail.com"
    }
  ],
  "require": {
    "ext-mysqli": "*",
    "ext-json": "*",
    "ext-http": "*",
    "firebase/php-jwt": "*",
    "vlucas/phpdotenv": "*",
    "predis/predis": "*"
  },
  "autoload": {
    "psr-4": {
      "Classes\\": "src/Classes/",
      "Controllers\\": "src/Controllers/",
      "Services\\": "src/Services/"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "@auto-scripts",
      "composer dump-autoload"
    ],
    "post-autoload-dump": [
      "composer dump-autoload"
    ],
    "auto-scripts": [
      "composer dump-autoload"
    ]
  }
}
